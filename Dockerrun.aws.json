{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [{
    "name": "client",
    "image": "sarithf/multi-client",
    "hostname": "client",
    "essential": false
  },
    {
      "name": "server",
      "image": "sarithf/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "sarithf/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "sarithf/multi-nginx",
      "essential": true,
      "portMappings": [{
        "hostPort": 80,
        "containerPort": 80
      }],
      "links": ["client", "server"]


    }

  ]

}